#!/system/bin/sh

# WARNING!
# If you're porting ArchiDroid to another device then you should edit all of these files:

# MANDATORY
# _mrturdroid/auto/system/bin/adpath - Mounts (ROM part)
# META-INF/com/google/android/aroma/exec/archidroid_init.sh (Recovery part)
# META-INF/com/google/android/updater-script - Mounts (updater-script)

# HIGHLY SUGGESTED
# _mrturdroid/auto/system/partlayout4nandroid - Partition layout for Online Nandroid, used by _mrturdroid/auto/system/bin/onandroid
# https://github.com/ameer1234567890/OnlineNandroid/wiki/Supported-Devices / http://ameer1234567890.tk/on/ + https://github.com/ameer1234567890/OnlineNandroid/tree/master/part_layouts/raw


# Mounts
# Used by ArchiDroid for providing universal device-based paths
fs="ext4" # Filesystem of blocks [USED]
boot="/dev/block/mmcblk0p6" # ROM's kernel image
recovery="/dev/block/mmcblk0p7" # Recovery image
radio="/dev/block/mmcblk0p1" # Modem image
cache="/dev/block/mmcblk0p22" # Cache partition
system="/dev/block/mmcblk0p21" # System partition
data="/dev/block/mmcblk0p23" # Data and internal memory

case $1 in
	fs) echo "$fs" ;;
	boot) echo "$boot" ;;
	recovery) echo "$recovery" ;;
	radio) echo "$radio" ;;
	cache) echo "$cache" ;;
	system) echo "$system" ;;
	data) echo "$data" ;;

*)
echo "fs $fs
boot $boot
recovery $recovery
radio $radio
cache $cache
system $cache
data $data
esac

exit 0