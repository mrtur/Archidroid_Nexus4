ADALIAS() {
	# Because fuck you kernel, that's why
	local CMD="$1"
	shift 1
	if [ -x "/system/xbin/$CMD" ]; then
		"/system/xbin/$CMD" $@ # Yes, we must break on spaces in this case, SC2068
	elif [ -x "/system/bin/$CMD" ]; then
		"/system/bin/$CMD" $@ # Yes, we must break on spaces in this case, SC2068
	else
		"$CMD" $@ # Yes, we must break on spaces in this case, SC2068
	fi
	return $?
}

alias mount="ADALIAS mount"

if [ -z "$1" ]; then
	mount -o remount,rw /system
else
	mount -o remount,rw "$1"
fi
exit $?
