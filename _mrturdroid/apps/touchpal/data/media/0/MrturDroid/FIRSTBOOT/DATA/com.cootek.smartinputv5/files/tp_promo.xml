<Rules>
	<strategy 
		connection='wifi' 
		initialQuietDays='0'
		checkInterval='0.1' 
		toolbarQuietDays='0'
		statusbarQuietDays='0'
	/>
	<periodicTask fid='IME_ONLINE_000005' initialPromptDays='1' promptInterval='15' promptTimes='-1'>
		<toolbarToast allowClean='true' clickClean='true' clearRule='afterAction|afterClose' ensureNetwork='wifi'>
			<display>Personalize your dictionary</display>
			<action action='launchLocalApp'
				intent='com.cootek.smartinputv5.LEARN_TEXT'
				packageName='com.cootek.smartinputv5'
				cleanAcknowledge='launched'
			/>
		</toolbarToast>
	</periodicTask>	
	<periodicTask fid='IME_ONLINE_000007' initialPromptDays='7' promptInterval='3' promptTimes='3'>
		<statusbarToast allowClean='true' clickClean='true' clearRule='afterAction|afterClose' ensureNetwork='wifi'>
			<display>12 Must-Know Tips</display>
			<description>TouchPal  - Feel the speed, have fun!</description>
			<action action='launchWebView'
				title='12 Must-Know Tips'
				url='http://ime.cootekservice.com/international/tips/default/en/tips.html'
				requestToken='false'
				cleanAcknowledge='pageOpened'
				/>
		</statusbarToast>
	</periodicTask>
</Rules>
