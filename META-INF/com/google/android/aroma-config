#
# THEME
#
theme("Black&White");

#
# FONTS
#
fontresload( "0", "ttf/lucon.ttf;", "13" );
fontresload( "1", "ttf/lucon.ttf;", "16" );

resexec("exec/mrturdroid_init.sh");

#
# LANGUAGE
#
loadlang("langs/pl.lang");

#
# aroma_fast ON or OFF
#
setvar("aroma_fast","OFF");

if getvar("aroma_fast")=="OFF" then
	anisplash(
	#-- Number of Loop
